<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="author">
        <createTable tableName="places">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="slug" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(255)"/>
            <column name="city" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="varchar(255)"/>
            <column name="latitude" type="decimal(10, 6)">
                <constraints nullable="false" checkConstraint="latitude >= -90.0 AND latitude <= 90.0"/>
            </column>
            <column name="longitude" type="decimal(10, 6)">
                <constraints nullable="false" checkConstraint="longitude >= -180 AND longitude <= 180"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="author">
        <createTable tableName="events">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="place_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_event_place" references="places(id)"/>
            </column>
            <column name="price" type="decimal(10, 2)"/>
            <column name="description" type="varchar(255)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
